<UserControl x:Class="CustomControlTest.Ctrl.LabelAndButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomControlTest.Ctrl"
             mc:Ignorable="d" 
             x:Name="LabelButton"
             d:DesignHeight="450" d:DesignWidth="800">

    <Border BorderThickness="1" BorderBrush="Green">
        <StackPanel Orientation="Horizontal">
            <Label Content="{Binding Text, ElementName=LabelButton}" Width="200" />
            <Button Content="{Binding BtnLabel, ElementName=LabelButton}" Click="Button_Click"/>
        </StackPanel>
    </Border>
</UserControl>
